<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".utils.screens.MainActivity">
    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/cardView"
            android:id="@+id/cardView2">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/darkGray">

            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/opponentLife"
                    android:rotation="180"
                    android:background="@drawable/custom_button_green"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:textSize="36sp"
                    app:layout_constraintTop_toBottomOf="@+id/opponentNegative10"/>
            <Button
                    android:text="+ 5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opponentPositive5"
                    android:rotation="180"
                    android:background="@drawable/custom_button_green"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:textSize="24sp"/>
            <Button
                    android:text="- 5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opponentNegative5"
                    android:rotation="180"
                    android:background="@drawable/custom_button_red"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:textSize="24sp"/>
            <Button
                    android:text="+ 10"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:rotation="180"
                    android:background="@drawable/custom_button_green"
                    android:id="@+id/opponentPositive10" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/opponentPositive5" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="24sp"/>
            <Button
                    android:text="- 10"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/opponentNegative10"
                    android:rotation="180"
                    android:background="@drawable/custom_button_red"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/opponentNegative5" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="24sp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/cardView" app:layout_constraintTop_toBottomOf="@+id/cardView2">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        android:background="@color/gray">

            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/playerLife"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/custom_button_green"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="36sp"
                    app:layout_constraintBottom_toTopOf="@+id/playerNegative10"/>
            <Button
                    android:text="- 5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button_red"
                    android:id="@+id/playerNegative5" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    android:textSize="24sp"/>
            <Button
                    android:text="+ 5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button_green"
                    android:id="@+id/playerPositive5" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp" android:textSize="24sp"/>
            <Button
                    android:text="- 10"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button_red"
                    android:id="@+id/playerNegative10" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/playerNegative5" android:textSize="24sp"/>
            <Button
                    android:text="+ 10"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button_green"
                    android:id="@+id/playerPositive10" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/playerPositive5" android:textSize="24sp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>